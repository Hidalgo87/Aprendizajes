<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondopantalla"
    tools:context=".PrediccionEstiloAprendizaje">

    <Spinner
        android:id="@+id/spinner_KOLB"
        android:layout_width="408dp"
        android:layout_height="55dp"
        android:layout_marginTop="104dp"
        android:entries="@array/Spiner_Prediccion_KOLB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Spinner
        android:id="@+id/spinner_VARK"
        android:layout_width="408dp"
        android:layout_height="55dp"
        android:layout_marginTop="88dp"
        android:entries="@array/Spiner_Prediccion_VARK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_KOLB" />

    <Button
        android:id="@+id/button_enviar_encuesta"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="140dp"
        android:background="@mipmap/boton"
        android:onClick="EnviarEncuesta"
        android:text="Enviar Encuesta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_VARK" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="293dp"
        android:layout_height="164dp"
        android:layout_marginTop="32dp"
        android:text="Escoge los estilos de aprendizajes con los que mÃ¡s te sientas identificado"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>